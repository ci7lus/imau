    "graphql-request": "^7.2.0",
    "graphql-tag": "^2.12.6",
    "mal-ts": "^1.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-query": "^3.39.3",
    "tabler-icons-react": "^1.56.0"
